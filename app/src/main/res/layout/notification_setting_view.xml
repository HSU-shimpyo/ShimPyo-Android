<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/originalBackgroundColor"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약은 언제 드시나요?"
        android:textColor="@color/originalTextColor"
        android:textSize="70px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />


    <TextView
        android:id="@+id/before"
        android:layout_width="156dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/gray_box"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="식전"
        android:textSize="20sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/after"
        android:layout_width="156dp"
        android:layout_height="110dp"
        android:background="@drawable/gray_box"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="식후"
        android:textSize="20sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toEndOf="@+id/before"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/onehours"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:background="#E5E5EC"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="1시간"
        android:textSize="14sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/half"
        app:layout_constraintTop_toBottomOf="@+id/before"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/half"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:background="#E5E5EC"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="30분"
        android:textSize="14sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/now"
        app:layout_constraintTop_toBottomOf="@+id/before"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/twohours"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:background="@drawable/gray_box_edge_right"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="2시간"
        android:textSize="14sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/onehours"
        app:layout_constraintTop_toBottomOf="@+id/before"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/now"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:background="@drawable/gray_box_edge"
        android:elevation="0.5dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="곧바로"
        android:textSize="14sp"
        android:textColor="@color/originalTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/before"
        app:layout_constraintVertical_bias="0.098" />
</androidx.constraintlayout.widget.ConstraintLayout>